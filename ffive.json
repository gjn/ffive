{
  "description": "Configuration for mf-geoadmin3 project",
  "port": 9014,
  "ssl": true,
  "ssl_key": "./keys/server.key",
  "ssl_cert": "./keys/server.crt",
  "watchers": [{
    "directory": "../mf-geoadmin3/src/",
    "actiondir": "../",
    "exclude": "(src/TemplateCacheModule.js|src/index.html|src/mobile.html|style/app.css|src/print.css|src/embed.html|src/deps.js|src/lib/angular.js|src/lib/angular.min.js|src/lib/angular-translate.js|src/lib/angular-translate.min.js|src/lib/angular-translate-loader-static-files.js|src/lib/angular-translate-loader-static-files.min.js)$",
    "strategy": "SIGTERM",
    "actions": [{
      "pre": "ga3:source",
      "cmd": "make",
      "params": ["dev"],
      "error": "ga3:deverror",
      "post": "ga3:dev"
    }, {
      "cmd": "make",
      "params": ["prod"],
      "error": "ga3:proderror",
      "post": "ga3:prod"
    }, {
      "cmd": "make",
      "params": ["all"],
      "error": "ga3:allerror",
      "post": "ga3:all"
    }]
  }, {
    "directory": "../mf-chsdi3/chsdi/",
    "actiondir": "../",
    "exclude": "(/static/|/tests/|.pyc$|.mo$)",
    "strategy": "SIGTERM",
    "actions": [{
      "pre": "ch3:source",
      "cmd": "./buildout/bin/buildout",
      "params": ["-c", "buildout_ltjeg.cfg"],
      "error": "ch3:buildouterror",
      "post": "ch3:done"
    }]
  }]
}

